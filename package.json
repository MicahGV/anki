{
  "name": "anki-sync",
  "displayName": "Anki Sync",
  "description": "Sync notes with your locally running Anki",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:anki-sync.sync",
    "onView:decks"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anki-sync.sync",
        "title": "Anki: Sync Anki"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "decks",
          "name": "Anki Decks"
        }
      ]
    },
    "markdown.markdownItPlugins": true,
    "configuration": {
      "title": "Anki",
      "properties": {
        "anki.api.hostname": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "API Hostname"
        },
        "anki.api.port": {
          "type": "number",
          "default": 8765,
          "description": "API Port"
        },
        "anki.api.schema": {
          "type": "string",
          "default": "http",
          "description": "http or https"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.21",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/node-fetch": "^2.5.7",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "markdown-it-deflist": "^2.0.3",
    "node-fetch": "^2.6.0"
  }
}
